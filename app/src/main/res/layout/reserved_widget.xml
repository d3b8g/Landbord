<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.LandlordAppForRentsManagement.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Landbord.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_header"
        style="@style/Widget.LandlordAppForRentsManagement.AppWidget.InnerView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appwidget_context"
        style="@style/Widget.LandlordAppForRentsManagement.AppWidget.InnerView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_header"
        android:layout_centerInParent="true"
        android:textSize="14sp" />
</RelativeLayout>