<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <ImageButton
           android:id="@+id/income_previous_month_btn"
           android:layout_marginStart="8dp"
           android:background="@drawable/ic_arrow_back_24"
           android:layout_centerVertical="true"
           android:layout_alignParentStart="true"
           android:layout_width="30dp"
           android:layout_height="30dp"/>
       <TextView
           android:id="@+id/income_month_header_text"
           android:layout_centerInParent="true"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textSize="18sp"
           android:text="October"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ImageButton
           android:id="@+id/income_next_month_btn"
           android:background="@drawable/ic_arrow_forward_24"
           android:layout_centerVertical="true"
           android:layout_marginEnd="8dp"
           android:layout_alignParentEnd="true"
           android:layout_width="30dp"
           android:layout_height="30dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorMoreGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/income_plug_empty_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>